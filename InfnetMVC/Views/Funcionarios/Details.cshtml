@model InfnetMVC.Models.Funcionario

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Funcionarios</h1>
</div>

<body class="body2">

    <div class="conteiner-delete">

        <div class="table__header">

            <h5>Deseja realmente excluir?</h5>

            <div class="voltar">
                <button id="btnVoltar"><a asp-action="Index">Voltar</a></button>
            </div>
        </div>

        <div class="infos">
            <hr />
            <dl class="row detalhes">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>
            </dl>


        </div>

        <div class="criar">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button><a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a></button>
            </form>
        </div>
    </div>

</body>

<script>

    document.addEventListener("DOMContentLoaded", function () {
        const btnVoltar = document.getElementById('btnVoltar');
        btnVoltar.addEventListener('click', function (event) {
            event.preventDefault();
            const contêiner = document.querySelector('.conteiner-delete');
            contêiner.classList.remove('show');
            setTimeout(() => {
                window.location.href = btnVoltar.querySelector('a').href;
            }, 500);
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        const contêiner = document.querySelector('.conteiner-delete');
        contêiner.classList.add('show');
    });
</script>