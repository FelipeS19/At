@model InfnetMVC.Models.Departamento

@{
    ViewData["Title"] = "Edit";
}

<body class="body2">
    <div class="conteineres">


        <div class="form-image">
            <img src="~/images/edit.svg" alt="insert" />
        </div>

        <div class="formi">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-header">

                    <div class="titulo">
                        <h1>Departamentos</h1>
                    </div>

                    <div class="voltar">
                        <button id="btnVoltar"><a asp-action="Index">Voltar</a></button>
                    </div>
                </div>
                <div class="input-group">

                    <div class="input-boxis">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="input-boxis">
                        <label asp-for="Local"></label>
                        <input asp-for="Local" />
                        <span asp-validation-for="Local" class="text-danger"></span>
                    </div>

                </div>

                <div class="input-button">
                    <button type="submit">Atualizar</button>
                </div>
            </form>
        </div>
    </div>
</body>



<script>

    document.addEventListener("DOMContentLoaded", function () {
        const btnVoltar = document.getElementById('btnVoltar');
        btnVoltar.addEventListener('click', function (event) {
            event.preventDefault(); // Prevenir o comportamento padrão do link
            const contêiner = document.querySelector('.conteineres');
            contêiner.classList.remove('show'); // Remove a classe 'show' para esconder o contêiner
            setTimeout(() => {
                window.location.href = btnVoltar.querySelector('a').href; // Redireciona para a página Index após um pequeno atraso para permitir a transição
            }, 500); // Tempo em milissegundos, ajuste conforme necessário
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        const contêiner = document.querySelector('.conteineres');
        contêiner.classList.add('show');
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
